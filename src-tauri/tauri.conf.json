{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Gigachads Radik Novel Project",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "scope": {
          "allow": ["$APPDATA/**/*"]
        },
        "all": true
      },
      "path":{
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "pw.philainel.gigachadnovel",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Gigachads Radik Novel Project",
        "maximized":true,
        "width": 720,
        "height": 1280,
        "minWidth": 854,
        "minHeight": 480,
        "visible": false
      },
      {
        "width": 600,
        "height": 375,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "closable": false,
        "resizable": false
      }
    ]
  }
}
